#include <iostream>

using namespace std;

int main(){

        int mark1, mark2, mark3, total;
        float percentage;

        cout << "Enter the marks of Robert in subject 1, 2 and 3 respectively" << endl;
        cin >> mark1 >> mark2 >> mark3;
        total = mark1 + mark2  + mark3;
        percentage = (total*100) / 300;

        cout << "Robert got a total of" << total << " marks out of 300. " << endl;
        cout << "Robert got " << percentage << " percent marks. " << endl;


        return 0;
}

